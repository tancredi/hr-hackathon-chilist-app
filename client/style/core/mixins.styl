page-width()
    max-width page-size
    margin-left auto
    margin-right @margin-left

debullet()
    margin-left 0
    margin-right 0
    padding 0
    list-style none

border-radius(rad = 3px)
    border-radius rad

smooth-font(state = null)

    if (state == false)
        font-smoothing subpixel-antialiased
        -moz-osx-font-smoothing auto
    else
        font-smoothing antialiased
        -moz-osx-font-smoothing grayscale

bg-image(image-name, size = false, position = false, repeat = false, ext = 'png')
    background-image: url(assets-dir + image-name + '.' + ext)

    if size
        background-size: size

    if position
        background-position: position

    if repeat
        background-repeat: repeat

    if ext != 'svg'
        @media (-webkit-min-device-pixel-ratio: 1.5), (min--moz-device-pixel-ratio: 1.5), (-o-min-device-pixel-ratio: 1.5)
            background-image: url(assets-dir + image-name + '@2x.' + ext + '?v-' + cacheId)

noselect()
    -webkit-touch-callout none
    -webkit-user-select none
    -khtml-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none

vertical-rhythm()
    margin-top 0
    margin-bottom 20px

    &:last-child
        margin-bottom 0